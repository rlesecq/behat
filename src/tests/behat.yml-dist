# behat.yml
default:
    paths:
        features: '%behat.paths.base%/features'
        bootstrap: '%behat.paths.features%/bootstrap'
    extensions:
        Behat\MinkExtension\Extension:
            base_url: 'http://@base_url@'
            javascript_session: 'selenium'
            browser_name: firefox
            goutte: ~
            selenium2: ~
    formatter:
        name:       pretty,progress

